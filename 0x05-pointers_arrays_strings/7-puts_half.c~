#include "holberton.h"
#include <string.h>

/**
 * puts_half - prints second half of a string
 * @str: string to be printed
 * Return: void
 */
void puts2(char *str)
{
int i, j = 0;
for (; str[j] != '\0')
{
j++;
}
if (j % 2 == 1)
{
i = (j - 1) / 2;
i += 1;
}
else
{
i = j / 2;
}
for (; i < j; i++)
{
_putchar('\n');
}
}
